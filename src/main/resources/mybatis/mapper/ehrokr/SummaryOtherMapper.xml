<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netease.okr.mapper.okr.SummaryOtherMapper">

	<!--实体映射-->
	<resultMap id="summaryOtherResultMap" type="com.netease.okr.model.entity.SummaryOther">
		<!---->
		<id property="id" column="id" />
		<!---->
		<result property="name" column="name" />
		<!---->
		<result property="content" column="content" />
		<result property="contentDetail" column="content_detail" />
		<result property="summaryId" column="summary_id" />
		<!---->
		<result property="modifyTime" column="modify_time" />
		<!---->
		<result property="createTime" column="create_time" />
		
		<collection property="appendixList" ofType="com.netease.okr.model.entity.Appendix" column="id" select="com.netease.okr.mapper.okr.AppendixMapper.getAppendixRelListOfSummaryOther"></collection>
	</resultMap>


	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		id,
		name,
		content,
		content_detail,
		summary_id,
		modify_time,
		create_time
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectById" resultMap="summaryOtherResultMap" resultType="java.lang.Integer">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM tb_summary_other
		 WHERE id = #{id}
	</select>
	
	
	<select id="getSummaryOtherList" resultMap="summaryOtherResultMap" resultType="java.lang.Integer">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM tb_summary_other
		 WHERE summary_id = #{summaryId}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteById" parameterType="java.lang.Integer">
		 DELETE FROM tb_summary_other
		 WHERE id = #{id}
	</delete>
	
	<delete id="deleteBySummaryId" parameterType="java.lang.Integer">
		 DELETE FROM tb_summary_other
		 WHERE summary_id = #{summaryId}
	</delete>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertSummaryOther" parameterType="com.netease.okr.model.entity.SummaryOther" useGeneratedKeys="true" keyProperty="id">
		 INSERT INTO tb_summary_other
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				 id,
			</if>
			<if test="name != null  and name!='' ">
				 name,
			</if>
			<if test="content!=null  and content!='' ">
				 content,
			</if>
			<if test="contentDetail!=null and contentDetail!='' ">
				 content_detail,
			</if>
			<if test="summaryId != null">
				 summary_id,
			</if>
			 modify_time,
			 create_time

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id!=null">
				 #{id},
			</if>
			<if test="name!=null and name!='' ">
				 #{name},
			</if>
			<if test="content!=null  and content!='' ">
				 #{content},
			</if>
			<if test="contentDetail!=null and contentDetail!='' ">
				 #{contentDetail},
			</if>
			<if test="summaryId != null">
				  #{summaryId},
			</if>
			now(),
			now()
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateById" parameterType="com.netease.okr.model.entity.SummaryOther">
		 UPDATE tb_summary_other
 		 <set> 
			<if test="name != null and name!=''">
				 name = #{name},
			</if>
			<if test="content!=null  and content!='' ">
				 content = #{content},
			</if>
			<if test="contentDetail!=null and contentDetail!='' ">
				content_detail = #{contentDetail},
			</if>
			modify_time =now()

 		 </set>
		 WHERE id = #{id}
	</update>

</mapper>